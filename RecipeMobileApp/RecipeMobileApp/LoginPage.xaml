<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeMobileApp.LoginPage">
    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Recipe App Login" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="#4CAF50" TextColor="White" CornerRadius="10"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Button Text="Forgot Password?" Clicked="OnForgotPasswordClicked" BackgroundColor="Transparent" TextColor="#1976D2"/>
            <Button Text="Create New Account" Clicked="OnCreateAccountClicked" BackgroundColor="Transparent" TextColor="#1976D2"/>
        </StackLayout>
        <Label x:Name="LoginMessage" TextColor="Red" IsVisible="False"/>
    </StackLayout>
</ContentPage>
