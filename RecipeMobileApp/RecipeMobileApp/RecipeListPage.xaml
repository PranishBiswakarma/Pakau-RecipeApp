<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeMobileApp.RecipeListPage"
             BackgroundColor="#f5f5f5">
    <StackLayout>
        <Image x:Name="CuisineImage" HeightRequest="180" Aspect="AspectFill"/>
        <Label x:Name="CuisineLabel" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10" Margin="0,10">
            <Label Text="Veg"/>
            <Switch x:Name="VegSwitch" Toggled="OnVegSwitchToggled"/>
            <Label Text="Non-Veg"/>
        </StackLayout>
        <CollectionView x:Name="RecipeCollection" ItemsSource="{Binding FilteredRecipes}" SelectionMode="Single" SelectionChanged="OnRecipeSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" HasShadow="True">
                        <StackLayout>
                            <!-- Test with a hardcoded URL below to isolate issues -->
                            <!-- <Image Source="https://upload.wikimedia.org/wikipedia/commons/6/6e/Dal_bhat_tarkari.jpg" HeightRequest="120" Aspect="AspectFill"/> -->
                            <Image Source="{Binding ImageUrl}" HeightRequest="120" Aspect="AspectFill"/>
                            <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold"/>
                            <Label Text="{Binding Ingredients}" FontSize="14"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
